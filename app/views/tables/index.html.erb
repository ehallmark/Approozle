<div class="row">
	<div class = "col-xs-12">		
		<h3>Tables</h3>
		<br />
		<%= form_for_filterrific @filterrific do |f| %>
		  <div class = "row">
		  	<div class = "col-xs-4">
		  		<label for="search_query" class="control-label">Search</label>
			    <%= f.text_field(
			      :search_query,
			      class: 'filterrific-periodically-observed form-control'
			    ) %>
			</div>
		  	<div class="col-xs-6 col-xs-offset-1">
		  	  <label class="control-label">Item Type</label>
			  <div class="controls">
			    <label class="radio">
			      <%= f.radio_button(:item_type, 'Dining Table', class: 'filterrific-periodically-observed' ) %>
			      Dining Table
			    </label>
			    <label class="radio">
			      <%= f.radio_button(:item_type, 'End Table', class: 'filterrific-periodically-observed' ) %>
				  End Table
			    </label>
			    <label class="radio">
			      <%= f.radio_button(:item_type, 'Pub Table', class: 'filterrific-periodically-observed' ) %>
			      Pub Table
			    </label>
			  </div>
 			</div>
		    <div class="col-xs-1">
		      <%= link_to(
		        'Reset filters',
		        reset_filterrific_url,
		      ) %>
		    </div>
	      </div>
		  <%# add an automated spinner to your form when the list is refreshed %>
		  <%= render_filterrific_spinner %>
		<% end %>
		<br />
		<%= render(
			  partial: 'tables/list',
			  locals: { tables: @tables }
			) %>
	</div>
</div>
