<div id="filterrific_results">

  <div>
    <%= page_entries_info tables %>
  </div>
  <table class='table table-bordered table-striped'>
	<tr>
		<td></td>
		<th>Item Name</th>
		<th>Brand Name</th>
		<th>Brand Name Index</th>
		<th>Item Type</th>
		<th>Material</th>
		<th>Price</th>
		<th>Delete</th>
	</tr>
	<% tables.each_with_index do |table,index| %>
		<tr>
			<td><%= index+1 %></td>
			<td><%= link_to table.name, tables_edit_path(id: table.id), title: 'Edit this item' %></td>
			<td><%= table.brand_name %></td>
			<td><%= table.brand_name_index %></td>
			<td><%= table.item_type %></td>
			<td><%= table.material %></td>
			<td><%= table.price %></td>
			<td><%= link_to "<i class='glyphicon glyphicon-remove' style='color: red;'></i>".html_safe, tables_delete_path(id: table.id), data: {confirm: "Are you sure?"}, method: :delete %></td>
		</tr>
	<% end %>
  </table>
</div>
  
<%= will_paginate tables %>
