<div id="filterrific_results">

  <div>
    <%= page_entries_info tables %>
  </div>
  <table class='table table-bordered table-striped'>
	<tr>
		<td></td>
		<th><%= filterrific_sorting_link(@filterrific, :name)%></th>
		<th><%= filterrific_sorting_link(@filterrific, :brand_name)%></th>
		<th><%= filterrific_sorting_link(@filterrific, :brand_name_index)%></th>
		<th><%= filterrific_sorting_link(@filterrific, :item_type)%></th>
		<th><%= filterrific_sorting_link(@filterrific, :item_type_index)%></th>
		<th><%= filterrific_sorting_link(@filterrific, :price)%></th>
		<th>Delete</th>
	</tr>
	<% tables.each_with_index do |table,index| %>
		<tr>
			<td><%= index+1 %></td>
			<td><%= link_to (table.name || "").titleize, tables_edit_path(id: table.id), title: 'Edit this item' %></td>
			<td><%= (table.brand_name || "").titleize %></td>
			<td><%= table.brand_name_index %>
			<td><%= (table.item_type || "").titleize %></td>
			<td><%= table.item_type_index %>
			<td><%= table.price %></td>
			<td><%= link_to "<i class='glyphicon glyphicon-remove' style='color: red;'></i>".html_safe, tables_delete_path(id: table.id), data: {confirm: "Are you sure?"}, method: :delete %></td>
		</tr>
	<% end %>
  </table>
</div>
  
<%= will_paginate tables %>
