  <%= f.label :brand_name %>:
  <%= f.text_field :brand_name %><br />
  <%= f.label :name %>:
  <%= f.text_field :name %><br />  
  <%= f.label :size %>:
  <%= f.text_field :size %><br />
  <%= f.label :price %>:
  <%= f.text_field :price %><br /> 
